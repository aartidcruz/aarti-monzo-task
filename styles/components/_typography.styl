// Links
a
  transition(400ms)
  text-decoration none
.link-pink,
.link-green,
.link-blue
  transition(400ms)
  display inline-block
  cursor pointer
  transform(translateY(0))
  &:hover
    text-decoration none
    transform(translateY(-1px))
