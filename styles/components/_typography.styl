// Weight
h1, h2, h3, h4
  font-weight 700

// Size
h1, .text-xxl
  font-size 2em
  @media screen and (max-width: $screen-md-min)
    font-size 2.5em !important
h2, .text-xl
  font-size 2em
h3, .text-lg
  font-size 1.5em
h4, .text-md
  font-size 1.15em
h5, .text-sm
  font-size 0.85em

// Margin and spacing
h1, h2, h3, h4, h5
  margin 0
p
  margin 0 0 0.3em

