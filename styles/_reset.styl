body
  margin 0
  padding 0
  width 100%
  font-size 24px
  line-height 1.5
  text-align center
  font-weight normal
  box-sizing border-box
  -webkit-font-smoothing anti-aliased
  font-family 'Dosis', sans-serif
  color #0B1433

  select
    -webkit-appearance none
    border none
    border-radius 0
    font-family 'Dosis'
    font-size 32px
    background transparent
    color white
    border-bottom 3px solid white
    width 240px
    max-width 100%
    outline none
    cursor pointer
  .select-container
    position relative
    width 240px
    max-width 100%
    margin 12px auto
    &:after
      content ''
      top 16px
      right 0px
      width 20px
      height 20px
      position absolute
      background-size 100% 100%
      background-repeat no-repeat
      background-image url('../assets/arrow.svg')
