#hero.section
  .container-fluid.table
    .row.table-cell
      .col-sm-12.col-md-4
        h2 When is the meeting?
        .select-container
          select(name="Select a time")
            option(value="9:00am") 9:00am
            option(value="10:00am") 10:00am
            option(value="11:00am") 11:00am
      .col-sm-12.col-md-8
        #options
          h2 What do you need?
          #svg-animations
            .option
              #people.circle
                img(src="assets/people.svg")
              p.caption Fit 9+ people
            .option
              #tv.circle
                img(src="assets/tv.svg")
              p.caption TV
            .option
              #video.circle
                img(src="assets/video.svg")
              p.caption Video Calling
            .option
              #private.circle
                img(src="assets/private.svg")
              p.caption Private
            .option
              #sunny.circle
                img(src="assets/sunny.svg")
              p.caption Sunny

